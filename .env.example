# -----------------------------------------------------------------------------
# Resend: https://resend.com/docs
# -----------------------------------------------------------------------------
RESEND_API_KEY=

# -----------------------------------------------------------------------------
# Supabase: https://supabase.com/docs
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------
# Enable/disable rate limiting (disabled by default in development)
ENABLE_RATE_LIMITING=false
DISABLE_RATE_LIMITING=false

# Lead endpoint rate limits (strict - 3 requests per minute)
RATE_LIMIT_LEAD_WINDOW_MS=60000
RATE_LIMIT_LEAD_MAX=3
RATE_LIMIT_LEAD_BURST=1

# Rankings endpoint rate limits (moderate - 30 requests per minute)
RATE_LIMIT_RANKINGS_WINDOW_MS=60000
RATE_LIMIT_RANKINGS_MAX=30
RATE_LIMIT_RANKINGS_BURST=10

# Events endpoint rate limits (moderate - 20 requests per minute)
RATE_LIMIT_EVENTS_WINDOW_MS=60000
RATE_LIMIT_EVENTS_MAX=20
RATE_LIMIT_EVENTS_BURST=5

# Auth endpoints rate limits (lenient - 10 requests per minute)
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_AUTH_BURST=5

# Default rate limits for other endpoints (100 requests per minute)
RATE_LIMIT_DEFAULT_WINDOW_MS=60000
RATE_LIMIT_DEFAULT_MAX=100
RATE_LIMIT_DEFAULT_BURST=20

# Safe list of IPs that bypass rate limiting (comma-separated)
# Example: RATE_LIMIT_SAFE_LIST=127.0.0.1,192.168.1.1
RATE_LIMIT_SAFE_LIST=